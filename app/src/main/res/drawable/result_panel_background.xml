<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Tamna pozadina unutar rama -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#302000" /> <!-- Tamno braon/zlatna pozadina -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Zlatni ram -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#B08F4C" /> <!-- Zlatna boja rama -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#DDC482" /> <!-- Svetlija zlatna ivica -->
        </shape>
    </item>

    <!-- UnutraÅ¡nji svetliji deo -->
    <item android:top="16dp" android:bottom="16dp" android:left="16dp" android:right="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#504020" /> <!-- Srednje tamna pozadina za tekst -->
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#706040" />
        </shape>
    </item>
</layer-list>