<!-- res/drawable/boss_bar_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6A1B9A"
                android:endColor="#4A148C"
                android:angle="270" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#B08F4C" /> <!-- Zlatni obrub -->
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8E24AA"
                android:endColor="#6A1B9A"
                android:angle="270" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>