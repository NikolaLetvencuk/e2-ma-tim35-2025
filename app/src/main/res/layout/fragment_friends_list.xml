<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F2F5"> <!-- Neka svetlija pozadina -->

    <!-- Zaglavlje stranice -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🤝 Prijatelji"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:paddingBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pronađite prijatelje i formirajte moćne saveze!"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Sekcija za zahteve za prijateljstvo i dodavanje prijatelja -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvFriendRequestsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zahtevi za Prijateljstvo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btnAddFriend"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Dodaj Prijatelja"
                android:textSize="12sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:stateListAnimator="@null"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFriendRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/tvNoFriendRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nema novih zahteva za prijateljstvo."
            android:gravity="center"
            android:visibility="gone"
            android:textColor="#666666"
            android:paddingTop="8dp"/>

    </LinearLayout>

    <!-- Sekcija za prijatelje i dugme za savez -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moji Prijatelji"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFriends"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/tvNoFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Još uvek nemaš prijatelja."
            android:gravity="center"
            android:visibility="gone"
            android:textColor="#666666"
            android:paddingTop="8dp"/>

        <Button
            android:id="@+id/btnCreateAlliance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kreiraj Novi Savez"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:stateListAnimator="@null"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>