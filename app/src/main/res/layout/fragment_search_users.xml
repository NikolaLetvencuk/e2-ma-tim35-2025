<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pronađi Prijatelje"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Zatvori" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_edittext_background"
        android:padding="4dp">

        <EditText
            android:id="@+id/etSearchUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Unesi korisničko ime..."
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="15dp"
            android:background="@android:color/transparent"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pretraži"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/button_primary"
            android:textColor="@color/text_on_primary"
            app:cornerRadius="8dp" />

        <ImageButton
            android:id="@+id/btnScanQr"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_qr_code_scanner"
            android:tint="@color/accent_color"
            android:scaleType="fitCenter"
            android:contentDescription="Skeniraj QR kod"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSearchResults"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvNoSearchResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nema pronađenih korisnika."
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/text_secondary"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>