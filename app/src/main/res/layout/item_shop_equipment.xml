<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/item_background"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/ivEquipmentIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEquipmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naziv Opreme"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/tvEquipmentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip"
            android:textSize="12sp"
            android:textColor="@color/potion_color"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvEquipmentDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis opreme..."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvEquipmentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 ðŸª™"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/coin_color" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kupi"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/button_primary"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
