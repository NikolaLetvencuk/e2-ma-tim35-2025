<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".presentation.fragments.StatisticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaša statistika"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#EEEEEE"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.05"
            android:shadowColor="#FF5722"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"/>

        <!-- Aktivni Dani i Najduži Niz Zadataka - Top Panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:baselineAligned="false">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#393E46">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aktivni Dani"
                        android:textSize="18sp"
                        android:textColor="#00ADB5"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/tvActiveDaysCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="#66BB6A"
                        android:text="0"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="monospace"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dana"
                        android:textSize="14sp"
                        android:textColor="#EEEEEE"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#393E46">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Najduži Niz"
                        android:textSize="18sp"
                        android:textColor="#00ADB5"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/tvLongestTaskStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="#EF5350"
                        android:text="0"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="monospace"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dana zaredom"
                        android:textSize="14sp"
                        android:textColor="#EEEEEE"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Prosečna Težina Zadataka - Iznad XP Progresa -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#393E46">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prosečna Težina Zadataka (XP)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#00ADB5"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:id="@+id/tvAverageTaskDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:textColor="#FFCA28"
                    android:text="N/A XP"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="monospace"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartAverageDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="280dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- XP u Poslednjih 7 Dana – line graf za prikaz napretka -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#393E46">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XP Progres (poslednjih 7 dana)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#00ADB5"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartXpProgress"
                    android:layout_width="match_parent"
                    android:layout_height="280dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Zadataka (Donut grafikon) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#393E46">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ukupan Status Zadataka"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#00ADB5"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChartTaskStatus"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Završeni Zadaci po Kategoriji (Bar graf) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#393E46">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Završeni Zadaci po Kategoriji"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#00ADB5"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChartCategories"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Specijalne Misije - Bottom Panel -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#393E46">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specijalne Misije"
                    android:textSize="20sp"
                    android:textColor="#00ADB5"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:id="@+id/tvSpecialMissions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="#C77DFF"
                    android:text="Započeto: 0, Završeno: 0"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>