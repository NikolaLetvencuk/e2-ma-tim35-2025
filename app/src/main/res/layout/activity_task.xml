<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/headerTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTotalTasks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="You have 30 tasks this month"
            android:textSize="14sp"
            android:letterSpacing="0.1"
            android:gravity="center"
            android:textStyle="bold"/>

            <Button
                android:id="@+id/btnNewTask"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="+ Add new task" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/allTaskBoxes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/headerTasks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have 30 tasks this month"
            android:letterSpacing="0.1"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"/>


        <GridLayout
            android:id="@+id/gridTaskBoxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:rowOrderPreserved="false" >

            <!-- Normal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/task_box_height"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_task_box"
                android:layout_margin="@dimen/task_box_margin"
                android:layout_marginLeft="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Normal"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/task_text_size"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/task_text_margin_left"/>

                <TextView
                    android:layout_width="@dimen/task_circle_size"
                    android:layout_height="@dimen/task_circle_size"
                    android:gravity="center"
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="@dimen/task_circle_text_size"
                    android:background="@drawable/bg_task_circle"
                    android:layout_marginEnd="@dimen/task_text_margin_right" />

            </LinearLayout>

            <!-- Important -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/task_box_height"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_task_box"
                android:layout_margin="@dimen/task_box_margin"
                android:layout_marginRight="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Important"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/task_text_size"
                    android:layout_marginLeft="@dimen/task_text_margin_left" />

                <TextView
                    android:layout_width="@dimen/task_circle_size"
                    android:layout_height="@dimen/task_circle_size"
                    android:gravity="center"
                    android:text="3"
                    android:textStyle="bold"
                    android:textSize="@dimen/task_circle_text_size"
                    android:background="@drawable/bg_task_circle"
                    android:layout_marginEnd="@dimen/task_text_margin_right" />

            </LinearLayout>

            <!-- Extremely Important -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/task_box_height"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_task_box"
                android:layout_margin="@dimen/task_box_margin"
                android:layout_marginLeft="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Extremely"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/task_text_size"
                    android:layout_marginLeft="@dimen/task_text_margin_left"/>

                <TextView
                    android:layout_width="@dimen/task_circle_size"
                    android:layout_height="@dimen/task_circle_size"
                    android:gravity="center"
                    android:text="8"
                    android:textStyle="bold"
                    android:textSize="@dimen/task_circle_text_size"
                    android:background="@drawable/bg_task_circle"
                    android:layout_marginEnd="@dimen/task_text_margin_right" />

            </LinearLayout>

            <!-- Special -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/task_box_height"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_task_box"
                android:layout_margin="@dimen/task_box_margin"
                android:layout_marginRight="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Special"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/task_text_size"
                    android:layout_marginLeft="@dimen/task_text_margin_left"/>

                <TextView
                    android:layout_width="@dimen/task_circle_size"
                    android:layout_height="@dimen/task_circle_size"
                    android:gravity="center"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/task_circle_text_size"
                    android:background="@drawable/bg_task_circle"
                    android:layout_marginEnd="@dimen/task_text_margin_right" />

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/allTaskBoxes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today's Tasks"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvSeeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTasks1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:paddingEnd="16dp"/>


    <LinearLayout
        android:id="@+id/llFilterButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rvTasks1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today" />

        <Button
            android:id="@+id/btnWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Week" />

        <Button
            android:id="@+id/btnMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Month" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/llFilterButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Naslov dana -->
        <TextView
            android:id="@+id/tvDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday, Aug 19"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- RecyclerView za zadatke tog dana -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDayTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
