<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#121212">

    <!-- Boss image (sprite) -->
    <ImageView
        android:id="@+id/ivBoss"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/boss_idle"
        android:contentDescription="Boss"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Boss HP bar -->
    <TextView
        android:id="@+id/tvBossHpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boss HP"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivBoss"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBossHp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:max="1000"
        android:progress="1000"
        android:progressDrawable="@android:drawable/progress_horizontal"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tvBossHpLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBoss"/>

    <!-- User PP bar -->
    <TextView
        android:id="@+id/tvUserPpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your PP"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/progressBossHp"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/progressUserPp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:max="1000"
        android:progress="300"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tvUserPpLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBossHp"/>

    <!-- Info: attacks left and hit chance -->
    <TextView
        android:id="@+id/tvAttacksLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attacks: 5/5"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/progressUserPp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvHitChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hit chance: 67%"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/progressUserPp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Equipment icon -->
    <ImageView
        android:id="@+id/ivEquipment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="Equipment"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvAttacksLeft"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Attack button -->
    <Button
        android:id="@+id/btnAttack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Attack (Tap)"
        app:layout_constraintTop_toBottomOf="@id/tvAttacksLeft"
        app:layout_constraintStart_toEndOf="@id/ivEquipment"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <!-- Separator -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#333"
        app:layout_constraintTop_toBottomOf="@id/btnAttack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Chest/Result area -->
    <LinearLayout
        android:id="@+id/resultPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnAttack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/ivChest"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@drawable/chest_closed"
            android:contentDescription="Chest"/>

        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCoinsWon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coins: 0"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvEquipmentWon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipment: -"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
