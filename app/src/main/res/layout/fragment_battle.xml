<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_boss">

    <ImageView
        android:id="@+id/boss_hp_frame"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/boss_hp_bar_frame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvBossName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Životni poeni neprijatelja"
        android:textColor="@color/text_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/font9"
        app:layout_constraintTop_toTopOf="@+id/boss_hp_frame"
        app:layout_constraintStart_toStartOf="@+id/boss_hp_frame"
        app:layout_constraintEnd_toEndOf="@+id/boss_hp_frame"
        app:layout_constraintBottom_toTopOf="@+id/progressBossHp"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="4dp"/>

    <ProgressBar
        android:id="@+id/progressBossHp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:max="500"
        android:progress="450"
        android:progressDrawable="@drawable/custom_boss_hp_progress"
        app:layout_constraintTop_toBottomOf="@+id/tvBossName"
        app:layout_constraintStart_toStartOf="@+id/boss_hp_frame"
        app:layout_constraintEnd_toEndOf="@+id/boss_hp_frame"
        app:layout_constraintBottom_toBottomOf="@+id/boss_hp_frame"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tvBossHpValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="450/500"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/progressBossHp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBossHp"
        app:layout_constraintEnd_toEndOf="@+id/progressBossHp"
        android:layout_marginEnd="8dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivBossAnimation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/boss_hp_frame"
        app:layout_constraintBottom_toTopOf="@+id/user_controls_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="80dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="boss_idle.json"  />

    <TextView
        android:id="@+id/tvAttackResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIT!"
        android:textColor="#FFD700"
        android:textSize="48sp"
        android:textStyle="bold"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toTopOf="@+id/user_controls_background"
        app:layout_constraintEnd_toEndOf="@+id/ivBossAnimation"
        app:layout_constraintStart_toStartOf="@+id/ivBossAnimation"
        app:layout_constraintTop_toBottomOf="@+id/boss_hp_frame" />

    <ImageView
        android:id="@+id/ivAttackIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_sword_attack"
        app:tint="#FFD700"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toTopOf="@+id/user_controls_background"
        app:layout_constraintEnd_toEndOf="@+id/ivBossAnimation"
        app:layout_constraintStart_toStartOf="@+id/ivBossAnimation"
        app:layout_constraintTop_toBottomOf="@+id/boss_hp_frame" />

    <ImageView
        android:id="@+id/hit_chance_frame"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/hit_chance_frame"
        app:layout_constraintBottom_toTopOf="@+id/user_controls_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@+id/reward_frame"/>

    <TextView
        android:id="@+id/tvHitChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Šansa za pogodak: 68%"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/hit_chance_frame"
        app:layout_constraintBottom_toBottomOf="@+id/hit_chance_frame"
        app:layout_constraintStart_toStartOf="@+id/hit_chance_frame"
        app:layout_constraintEnd_toEndOf="@+id/hit_chance_frame"/>

    <ImageView
        android:id="@+id/reward_frame"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/hit_chance_frame"
        app:layout_constraintBottom_toTopOf="@+id/user_controls_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hit_chance_frame"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/ivPotentialRewardChest"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/chest_closed"
        app:layout_constraintStart_toStartOf="@+id/reward_frame"
        app:layout_constraintTop_toTopOf="@+id/reward_frame"
        app:layout_constraintBottom_toBottomOf="@+id/reward_frame"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tvPotentialCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150"
        android:textColor="#FFD700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivPotentialRewardChest"
        app:layout_constraintTop_toTopOf="@+id/reward_frame"
        app:layout_constraintBottom_toBottomOf="@+id/reward_frame"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/ivPotentialCoinIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_coin"
        app:layout_constraintStart_toEndOf="@+id/tvPotentialCoins"
        app:layout_constraintTop_toTopOf="@+id/tvPotentialCoins"
        app:layout_constraintBottom_toBottomOf="@+id/tvPotentialCoins"
        android:layout_marginStart="4dp"/>

    <ImageView
        android:id="@+id/user_controls_background"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/user_controls_bar_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/ivUserAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/avatar_1"
        android:scaleType="centerCrop"
        android:background="@drawable/avatar_border"
        app:layout_constraintTop_toTopOf="@+id/user_controls_background"
        app:layout_constraintBottom_toBottomOf="@+id/user_controls_background"
        app:layout_constraintStart_toStartOf="@+id/user_controls_background"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvUserPpValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PP 80"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/progressUserPp"
        app:layout_constraintTop_toBottomOf="@+id/progressUserPp"
        android:layout_marginTop="10dp"/>

    <!-- HorizontalScrollView za skrolabilan prikaz opreme -->
    <HorizontalScrollView
        android:id="@+id/hsvActiveEquipment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/progressUserPp"
        app:layout_constraintStart_toEndOf="@+id/ivUserAvatar"
        app:layout_constraintEnd_toStartOf="@+id/btnAttack"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:id="@+id/llActiveEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        </LinearLayout>
    </HorizontalScrollView>

    <ProgressBar
        android:id="@+id/progressUserPp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:max="100"
        android:progress="80"
        android:progressDrawable="@drawable/custom_pp_progress"
        app:layout_constraintTop_toTopOf="@+id/ivUserAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserAvatar"
        app:layout_constraintStart_toEndOf="@+id/ivUserAvatar"
        app:layout_constraintEnd_toStartOf="@+id/btnAttack"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvAttacksLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAPADI: 4/5"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/progressUserPp"
        app:layout_constraintStart_toStartOf="@+id/progressUserPp"
        app:layout_constraintEnd_toEndOf="@+id/progressUserPp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"/>

    <ImageButton
        android:id="@+id/btnAttack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_sword_attack"
        android:padding="15dp"
        android:background="@drawable/attack_button_background"
        android:scaleType="centerInside"
        android:contentDescription="Attack"
        app:layout_constraintTop_toTopOf="@+id/ivUserAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserAvatar"
        app:layout_constraintEnd_toEndOf="@+id/user_controls_background"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:id="@+id/resultPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/result_panel_background"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BORBA ZAVRŠENA!"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:id="@+id/tvShakeInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROTRESITE TELEFON ZA OTVARANJE KOVČEGA!"
            android:textColor="#FFC300"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/ivChest"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/chest_closed"
            android:contentDescription="Loot Chest"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvCoinsWon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novčići: Osvojeno"
                android:textColor="#FFD700"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ivCoinIconResultPanel"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_coin"
                android:layout_marginStart="8dp"
                android:visibility="invisible"
                tools:visibility="visible"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvEquipmentWon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oprema: Osvojeno"
            android:textColor="#00FFFF"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:visibility="invisible"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>