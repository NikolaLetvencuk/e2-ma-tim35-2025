<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3C4B"
    android:clipToPadding="false"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp">

        <!-- Naslov Misije -->
        <TextView
            android:id="@+id/tvMissionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specijalna Misija Saveza"
            android:textColor="#F0F4F8"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="24dp"/>

        <!-- Detalji Bosa -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#3B4E61"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Bosa:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#D9E2EC"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvBossName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zajednički Bos Saveza"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#59B0F0"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvBossHp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP: 1000/1000"
                    android:textColor="#D9E2EC"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <ProgressBar
                    android:id="@+id/pbBossHp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:progressDrawable="@drawable/boss_hp_bar_frame_special"
                    android:progress="100"
                    android:max="100"
                    android:layout_marginTop="8dp"/>

                <!-- Vreme misije - SADA KAO LINEAR LAYOUT SA IMAGEVIEW I TEXTVIEW -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_time"
                        android:layout_marginEnd="8dp"
                        android:scaleType="fitCenter"/>
                    <TextView
                        android:id="@+id/tvMissionTimeRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preostalo vreme: 14 dana"
                        android:textSize="16sp"
                        android:textColor="#EF5350" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMissionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Aktivna"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="#66BB6A"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Moj Napredak -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#3B4E61"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moj Napredak:"
                    android:textColor="#F0F4F8"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <!-- Konvertovano u LinearLayout sa ImageView i TextView za kontrolu veličine ikone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_shop_mission"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/tvMyShopBuys"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kupovina u prodavnici: 0/5 (-0 HP)"
                            android:textColor="#D9E2EC"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_damage"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/tvMyBossHits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uspešan udarac u borbi: 0/10 (-0 HP)"
                            android:textColor="#D9E2EC"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_task_all"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/tvMyEasyNormalImportantTasks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rešeni laki/normalni/važni zadaci: 0/10 (-0 HP)"
                            android:textColor="#D9E2EC"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_star_full"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/tvMyOtherTasks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rešeni ostali zadaci: 0/6 (-0 HP)"
                            android:textColor="#D9E2EC"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/tvMyNoUnresolvedTasks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bez nerešenih zadataka: Ne (-0 HP)"
                            android:textColor="#D9E2EC"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="6dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_message"
                            android:layout_marginEnd="10dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/tvMyAllianceMessages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Poslata poruka u savezu (dnevno): 0 (-0 HP)"
                            android:textColor="#D9E2EC"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#607D8B"
                        android:layout_marginVertical="12dp"/>

                    <!-- Ukupna šteta - SADA KAO LINEAR LAYOUT SA IMAGEVIEW I TEXTVIEW -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_total"
                            android:layout_marginEnd="8dp"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:id="@+id/tvMyTotalDamage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ukupna šteta: 0 HP"
                            android:textColor="#59B0F0"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Napredak Svih Članova (ostaje isto) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#3B4E61"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Napredak Članova Saveza:"
                    android:textColor="#F0F4F8"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAllianceMissionProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_user_mission_progress"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logovi Aktivnosti (ostaje isto) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#3B4E61"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logovi Aktivnosti Misije:"
                    android:textColor="#F0F4F8"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMissionActivityLogs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_mission_activity_log"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>