<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#4A5C6F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Placeholder for badge if any -->
            <ImageView
                android:id="@+id/ivMemberBadge"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_badge_default"
                android:visibility="gone"
                app:tint="#59B0F0"/>

            <TextView
                android:id="@+id/tvMemberUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Korisničko Ime"
                android:textColor="#F0F4F8"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvMemberDamageDealt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ukupna Šteta: 0 HP"
            android:textColor="#D9E2EC"
            android:textSize="15sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvMemberProgressSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kupovine: 0, Udarci: 0, Zadaci: 0..."
            android:textColor="#90A4AE"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>