<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white"> <!-- Pretpostavlja se da imaš drawable za zaobljene ivice -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kreiraj Novi Savez"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAllianceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Naziv saveza"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAllianceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLength="20"/> <!-- Ograničenje dužine naziva saveza -->

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kao vođa saveza, nećete moći da ga napustite, ali ga možete ukinuti u celosti pre pokretanja misije."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelAllianceCreation"
            style="?attr/buttonBarNegativeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Otkaži"
            android:textColor="#FF0000"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnConfirmAllianceCreation"
            style="?attr/buttonBarPositiveButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kreiraj Savez"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>